<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/clothing_item_layout"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/clothing_item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/clothing_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:contentDescription="@string/title_outfit" />

    </android.support.v7.widget.CardView>


</LinearLayout>
